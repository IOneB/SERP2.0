
@using SERP.Entities
@model IEnumerable<User>

    @{
    Layout = "_Layout";
    }
    <section>

        <!-- Gird column -->
        <div  class="card card-cascade narrower z-depth-0 dark-card-admin text-white">

            <div  class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center white black lighten-4">

                <div>
                </div>

                <h4 class="white-text mx-3">Результаты работ</h4>

                <div>
                </div>

            </div>
            <div class="px-4">
                <div class="table-responsive">
                    <table id="dtMaterialDesignExample" class="table table-hover mb-0 text-white mw-100" style="color:white" cellspacing="0" >
                        <thead class="text-light bg-dark">
                            <tr>
                                <th class="th-sm">
                                    Логин <i class="fas fa-sort ml-1 text-white"></i>
                                </th>
                                <th class="th-sm">
                                    Группа <i class="fas fa-sort ml-1 text-white"></i>
                                </th>
                                <th class="th-sm">
                                    Имя <i class="fas fa-sort ml-1 text-white"></i>
                                </th>
                                <th class="th-sm">
                                    Дата <i class="fas fa-sort ml-1 text-white"></i> 
                                </th>
                                <th class="th-sm">
                                    Время
                                </th>
                                <th class="th-sm">
                                    Результат
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var result in Model)
                            {
                            <tr>
                                <td>@result.UserName</td>
                                <td>@result.Group</td>
                                <td>@result.Name</td>
                                <td>@DateTime.Now.ToShortDateString()</td>
                                <td>@DateTime.Now.ToLongTimeString()</td>
                                <td><a href="/admin/result/@result.UserID" class="text-primary">Скачать</a></td>
                            </tr>
                            }
                        </tbody>
                        <tfoot >
                        </tfoot>
                    </table>
                </div>
            </div>
            <div style="margin-bottom:15px"></div>
        </div>

    </section>
    @section customScripts{
    <script src="~/js/addons/datatables.min.js"></script>
    <script src="~/js/addons/datatables-select.min.js"></script>
    <script>
        $(document).ready(function () {
            $(document).ready(function () {
                $('#dtMaterialDesignExample').DataTable();
                $('#dtMaterialDesignExample_wrapper').find('label').each(function () {
                    $('#dtMaterialDesignExample_length').remove();
                    $(this).parent().append($(this).children());
                });
                $('#dtMaterialDesignExample_wrapper .dataTables_filter').find('input').each(function () {
                    $('input').attr("placeholder", "Search");
                    $('input').removeClass('form-control-sm');
                });
                $('#dtMaterialDesignExample_wrapper .dataTables_filter').addClass('md-form');
                $('#dtMaterialDesignExample_wrapper select').removeClass(
                    'custom-select custom-select-sm form-control form-control-sm');
                $('#dtMaterialDesignExample_wrapper select').addClass('mdb-select');
                $('#dtMaterialDesignExample_wrapper .mdb-select').materialSelect();
                $('#dtMaterialDesignExample_wrapper .dataTables_filter').find('label').remove();
                $('#dtMaterialDesignExample_paginate').addClass("text-white");
                
            });
        });
    </script>
    }