@using SERP.Entities
@model Recommend

@{
    Layout = "_Layout";
}

<style>
    .doc {
        width: 100%;
        height: 630px;
    }
</style>
<section>
    <div class="card card-cascade narrower z-depth-0 dark-card-admin text-white" style="padding:15px">
        <section class="">
            <h1 class="float-left text-white">@Model.Head</h1>
            <button id="download-button" type="button" style="margin:20px;" onclick="window.open('/recommend/download/@Model.Name')" class="btn btn-indigo waves-effect float-right waves-light">Скачать</button>
        </section>
        <div class="px-4">
            <embed class="doc" src=@("/theorypfd/" + @Model.Name + ".pdf")>
        </div>
    </div>

</section>



